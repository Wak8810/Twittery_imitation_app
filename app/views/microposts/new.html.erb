<% provide(:title, 'New Post') %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @micropost) do |f| %>
      <%= f.label :content %>
      <%= f.text_field :content %>

      <%= f.submit "Create New Post", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
